<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:padding="@dimen/standard_margin"
        android:layout_height="wrap_content">

    <TextView
            android:text="title"
            style="@style/Header"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/thumbIcon" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/thumbIcon" android:layout_marginTop="8dp"/>
    <TextView
            android:text="title"
            style="@style/Regular"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/description" app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="@+id/thumbIcon" android:layout_marginBottom="8dp"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="65dp"
            android:layout_height="65dp" app:srcCompat="@android:color/black"
            android:id="@+id/thumbIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>